# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# GitHub Configuration (SeedGPT's account for SaaS mode)
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username
SEEDGPT_TEMPLATE_REPO=roeiba/SeedGPT

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Cloud Configuration (SeedGPT's account for SaaS mode)
GCP_PROJECT_ID=seedgpt
GCP_CREDENTIALS_PATH=  # Optional: path to service account JSON
GCP_REGION=us-central1

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Project Configuration
MAX_PROJECTS_PER_IP=5
WORKSPACE_BASE_PATH=/tmp/seedgpt-projects

# Deployment Configuration
DOCKER_REGISTRY=gcr.io
MIN_INSTANCES=0
MAX_INSTANCES=10

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
